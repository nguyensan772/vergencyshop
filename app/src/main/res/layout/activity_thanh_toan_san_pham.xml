<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThanhToanSanPham"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/dangnhap"
        android:padding="10dp"
        >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ nhận hàng"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/tvTenSDtThanhToan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phùng Đức Tâm | 0383065746"
            />
        <TextView
            android:id="@+id/tvDiaChiThanhToan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số nhà 8 ,Ngách 32/45 Phố Viên,Cổ Nhuế, Bắc Từ Liêm, Hà Nội"

            />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_weight="5"
        android:id="@+id/rcSanPhamThanhToan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phương thức thanh toán"
        android:textStyle="bold"
        />
    <RadioGroup
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rdNhanHangThanhToan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanh toán khi nhận hàng"/>

        <RadioButton
            android:id="@+id/rdBankingThanhToan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanh toán bằng banking"/>
    </RadioGroup>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phí vận chuyển :"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tvGiaThanhToan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15000 VNĐ"
            android:textColor="@color/gia"
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:background="@color/dangnhap"
        android:layout_gravity="bottom"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng thanh toán"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/black"

                />


            <TextView
                android:id="@+id/tvTongThanhToanHoaDon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="310000 VNĐ"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/gia"
                />



        </LinearLayout>
        <TextView
            android:id="@+id/btnMuaHang"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:text="Mua\nhàng"
            android:background="@color/btnMua"
            android:gravity="center"
            android:textStyle="bold"
            app:cornerRadius="0sp"
            android:textColor="@color/white"
            android:textSize="25dp"
            />
    </LinearLayout>

</LinearLayout>